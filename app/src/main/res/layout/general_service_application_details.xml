<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_application_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Application Number" />

    <TextView
        android:id="@+id/view_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status" />

    <TextView
        android:id="@+id/view_approval_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approval Level / Number of Approvers" />

    <TextView
        android:id="@+id/view_date_requested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Requested" />

</LinearLayout>